<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

	<PreferenceCategory
		android:title="@string/camera_preferences">

		<ListPreference
			android:key="preshot_delay"
			android:defaultValue="2"
			android:title="@string/title_preshot_delay"
			android:summary="@string/summary_preshot_delay"
			android:entries="@array/entries_preshot_delay"
			android:entryValues="@array/values_preshot_delay"
			android:dialogTitle="@string/dialog_title_preshot_delay" />

		<CheckBoxPreference
			android:defaultValue="False"
			android:key="camera_flash"
			android:title="Use Flash"
			android:summaryOn="flash is On"
			android:summaryOff="flash is Off" />

		<ListPreference
			android:key="shooting_interval"
			android:defaultValue="5"
			android:title="@string/title_shooting_interval"
			android:summary="@string/summary_shooting_interval"
			android:entries="@array/entries_shooting_interval"
			android:entryValues="@array/values_shooting_interval"
			android:dialogTitle="@string/dialog_title_shooting_interval" />

		<ListPreference
			android:key="exposure_adjustment"
			android:defaultValue="Normal"
			android:title="@string/title_exposure_adjustment"
			android:summary="@string/summary_exposure_adjustment"
			android:entries="@array/entries_exposure_adjustment"
			android:entryValues="@array/entries_exposure_adjustment"
			android:dialogTitle="@string/dialog_title_exposure_adjustment" />

	</PreferenceCategory>

	<PreferenceCategory
		android:title="@string/email_preferences">

		<EditTextPreference
			android:key="email_preference"
			android:title="@string/title_email_preference"
			android:summary="@string/summary_email_preference"
			android:dialogTitle="@string/dialog_title_email_preference" />

	</PreferenceCategory>

</PreferenceScreen><!-- From: file:/Users/Rashida/Desktop/Android%20Projects/perler-in-case-of-dcc672810eb9/app/src/main/res/xml/preferences.xml -->